@{
    ViewData["Title"] = "Gerar Certificado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-certificate"></i> Gerar Certificado
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info text-center">
                        <strong><i class="fas fa-graduation-cap"></i> Curso:</strong>
                        <span class="badge bg-primary fs-6">@ViewBag.NomeCurso</span>
                    </div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" id="certificateForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="NomeCurso" value="@ViewBag.NomeCurso" />

                        <div class="mb-4">
                            <label for="nomeAluno" class="form-label">
                                <i class="fas fa-user"></i> Digite seu nome completo:
                            </label>
                            <input type="text"
                                   name="nomeAluno"
                                   id="nomeAluno"
                                   class="form-control form-control-lg"
                                   placeholder="Ex: João da Silva Santos"
                                   required
                                   autocomplete="name"
                                   minlength="3"
                                   maxlength="100" />
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> Digite o nome exatamente como deseja que apareça no certificado.
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" id="btnSubmit">
                                <i class="fas fa-file-pdf"></i> Gerar Meu Certificado
                            </button>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>

                    <div id="loadingSpinner" class="text-center mt-4" style="display: none;">
                        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Gerando...</span>
                        </div>
                        <p class="mt-3 text-muted">
                            <strong>Gerando seu certificado...</strong><br>
                            Aguarde um momento, por favor.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Dicas -->
            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-lightbulb"></i> Dicas importantes:</h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Digite seu nome <strong>completo</strong> como está no documento</li>
                        <li>Verifique se está <strong>escrito corretamente</strong></li>
                        <li>Use letras <strong>maiúsculas e minúsculas</strong> adequadamente</li>
                        <li>Evite abreviações (use "José" ao invés de "J.")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/css/Certificados/EnviarAluno.css" rel="stylesheet" />
}

@section Scripts {
    <script>
        document.getElementById('certificateForm').addEventListener('submit', function(e) {
            const nomeInput = document.getElementById('nomeAluno');
            const nome = nomeInput.value.trim();

            // Validação básica
            if (nome.length < 3) {
                e.preventDefault();
                alert('Por favor, digite seu nome completo (mínimo 3 caracteres).');
                nomeInput.focus();
                return;
            }

            // Mostra spinner e desabilita botão
            document.getElementById('loadingSpinner').style.display = 'block';
            document.getElementById('btnSubmit').disabled = true;
            document.getElementById('btnSubmit').innerHTML = '<i class="fas fa-spinner fa-spin"></i> Gerando...';
        });

        // Capitaliza primeira letra de cada palavra (opcional)
        document.getElementById('nomeAluno').addEventListener('blur', function() {
            const words = this.value.trim().split(' ');
            const capitalized = words.map(word => {
                if (word.length > 0) {
                    return word.charAt(0).toUpperCase() + word.slice(1).toLowerCase();
                }
                return word;
            });
            this.value = capitalized.join(' ');
        });

        // Auto-foco no campo de nome
        window.addEventListener('load', function() {
            document.getElementById('nomeAluno').focus();
        });
    </script>
}